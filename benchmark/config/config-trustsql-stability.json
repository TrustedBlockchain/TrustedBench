{
  "blockchain": {
    "type": "trustsql",
    "config": "benchmark/simple/trustsql.json"
  },
  "test": {
    "clients": {
      "type": "local",
      "number": 1
    },
    "rounds": [
        {
          "label" : "asset",
          "txNumber" : [10],
          "rateControl" : [{"type": "trustsql-rate", "opts": {"tps" : 10, "sleep_time": 1000, "unfinished_per_client": 10}}],
          "arguments": {  
            "issue_number": 10
          },
          "callback" : "benchmark/callback/asset.js"
        },
        {
          "label" : "transfer",
          "txDuration" : [10],
          "rateControl" : [{"type": "trustsql-rate", "opts": {"tps" : 10, "sleep_time": 1000, "unfinished_per_client": 10}}],
          "arguments": {  
          },
          "callback" : "benchmark/callback/transfer.js"
        }
    ]
  },
  "monitor": {
    "type": ["docker", "process"],
    "docker":{
      "name": ["all"]
    },
    "process": [
      {
        "command" : "node",
        "arguments" : "local-client.js",
        "multiOutput" : "avg"
      }
    ],
    "interval": 1
  }
}
