{
  "blockchain": {
    "type": "ontology",
    "config": "benchmark/ontology/ontology.json"
  },
  "command" : {
    "start": "./start.sh",
    "end" : "pkill -9 ontology"
  },
  "test": {
    "name": "ontology test",
    "description" : "This is ontology tps test!",
    "clients": {
      "type": "local",
      "number": 1
    },
    "rounds": [{
        "label" : "transfer",
        "txNumber" : [500],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 250}}],
        "arguments": { "sendTx": false, "invokeContranct":true, "contractName":"hello", "contractFunc":"hello" },
        "callback" : "benchmark/ontology/transfer.js"
      }]
  },
  "monitor": {
    "type": ["process"],
    "process": [
      {
        "command" : "./ontology",
        "arguments" : "--testmode,--networkid,3,--gaslimit,0,--gasprice,0,--rest,--localrpc",
        "multiOutput" : "avg"
      }
    ],
    "interval": 1
  }
}